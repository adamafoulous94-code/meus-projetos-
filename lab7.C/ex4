#include <stdio.h>
#include <string.h>
int main() {
    char str[100];
    int i=0;
    printf("Digite uma frase: ");
    fgets(str, sizeof(str), stdin);
    i=strlen(str);
    printf("Frase digitada: %s", str);
    printf("A frase tem %d caracteres (incluindo espaÃ§os e nova linha).\n"), i;
    
    return 0;
}