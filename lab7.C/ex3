#include <stdio.h>

int main() {
    char str[100];
    int i, count = 0;

    printf("Digite uma frase: ");
    fgets(str, sizeof(str), stdin); 
    str[strcspn(str, "\n")] = '\0';

    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] != ' ')
            count++;
    }

    printf("Frase digitada: %s\n", str);
    printf("Número de letras (sem contar espaços): %d\n", count);

    return 0;
}